## ============================================================
## Application
## ============================================================
ENVIRONMENT=dev
APP_VERSION=1.0.0
LOG_LEVEL=INFO

## ============================================================
## Google Drive
## ============================================================
DRIVE_FOLDER_ID=<YOUR_DRIVE_FOLDER_ID>

## ============================================================
## OCR configuration
## ============================================================
OCR_MODE=local_docker
OCR_DOCKER_IMAGE=georgesnass/ocr-universal:latest
OCR_SERVICE_URL=http://ocr-service:8000

## ============================================================
## GCP Service Account
## ============================================================
GCP_PROJECT_ID=<YOUR_GCP_PROJECT_ID>
GCP_REGION=europe-west1
GCP_SA_JSON_PATH=/app/secrets/service_account.json
GCP_SA_JSON_BASE64=<YOUR_BASE64_SERVICE_ACCOUNT_JSON>

## ============================================================
## Vertex AI
## ============================================================
VERTEX_LLM_MODEL=text-bison@001
VERTEX_EMBED_MODEL=textembedding-gecko@001

## ============================================================
## Google Cloud Storage
## ============================================================
GCS_BUCKET_TEXT=<YOUR_GCS_TEXT_BUCKET>
GCS_PREFIX_TEXT=texts/
GCS_BUCKET_EMB=<YOUR_GCS_EMBEDDINGS_BUCKET>
GCS_PREFIX_EMB=embeddings/

## ============================================================
## RAG parameters
## ============================================================
CHUNK_SIZE=1024
CHUNK_OVERLAP=128
TOP_K=8

## ============================================================
## Local files handling
## ============================================================
KEEP_LOCAL=false
